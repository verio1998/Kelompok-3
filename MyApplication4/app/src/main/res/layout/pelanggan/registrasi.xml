<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="349dp"
        android:layout_height="47dp"
        android:fontFamily="sans-serif-condensed"
        android:text="REGISTRASI"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_user"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Nama Pengguna"
        android:inputType="text"
        android:maxLines="1"
        android:padding="8dp"
        android:textColorHint="#ffffff"
        android:textSize="16sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f9d7db" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_padlock"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Kata sandi"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:textColorHint="#ffffff"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f9d7db" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_signs"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Isikan Alamat Anda"
        android:inputType="text"
        android:maxLines="1"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:textColorHint="#ffffff"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f9d7db" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_telephone"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Isikan Nomor Telepon"
        android:inputType="text"
        android:maxLines="1"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:textColorHint="#ffffff"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f9d7db" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="28dp">

    </FrameLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="351dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.15"
        android:background="?android:attr/colorEdgeEffect"
        android:text="Pilihan Paket"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_weight="0.03"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/btnYes"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.36"
            android:background="#00CC66"
            android:text="DAFTAR"
            android:textColor="#fff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnNo"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.46"
            android:background="#FF3333"
            android:text="BATAL"
            android:textColor="#fff"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
