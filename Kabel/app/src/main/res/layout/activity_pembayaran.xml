<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asuspc.kabel.Pembayaran">

    <android.support.v7.widget.CardView
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/pembayaran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:textSize="40dp"
                        android:textStyle="bold"
                        android:textColor="@color/ireng"
                        android:text="Pembayaran"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tampil_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID : "
                        android:inputType="textPersonName"
                        android:textColor="@color/ireng"
                        android:textSize="19dp" />

                    <TextView
                        android:id="@+id/txt_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:ems="10"
                        android:hint="ID"
                        android:inputType="textPersonName"
                        android:textSize="19dp"
                        android:textColor="@color/ireng"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tampil_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email: "
                        android:inputType="textPersonName"
                        android:textColor="@color/ireng"
                        android:textSize="19dp" />

                    <TextView
                        android:id="@+id/txt_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:ems="10"
                        android:hint="Email"
                        android:inputType="textPersonName"
                        android:textSize="19dp"
                        android:textColor="@color/ireng"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tampil_alamat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alamat : "
                        android:inputType="textPersonName"
                        android:textColor="@color/ireng"
                        android:textSize="19dp" />

                    <TextView
                        android:id="@+id/txt_alamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:ems="10"
                        android:hint="Alamat"
                        android:inputType="textPostalAddress"
                        android:textSize="19dp"
                        android:textColor="@color/ireng"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tampil_nama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama : "
                        android:inputType="textPersonName"
                        android:textColor="@color/ireng"
                        android:textSize="19dp" />

                    <TextView
                        android:id="@+id/txt_nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:ems="10"
                        android:hint="Nama"
                        android:inputType="textPostalAddress"
                        android:textSize="19dp"
                        android:textColor="@color/ireng"/>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/txt_tanggal"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:ems="10"
                            android:hint="Tanggal"
                            android:inputType="textPersonName"
                            android:textColor="@color/ireng"
                            android:textSize="19dp" />

                        <Button
                            android:id="@+id/up_tanggal"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="Pilih tanggal"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_column="0"
                            android:layout_row="7"
                            tools:layout_editor_absoluteX="414dp"
                            tools:layout_editor_absoluteY="0dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/txt_file"
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:ems="10"
                            android:hint="Nama file"
                            android:inputType="textPersonName"
                            android:textColor="@color/ireng"
                            android:textSize="19dp" />

                        <Button
                            android:id="@+id/up_gambar"
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:text="Unggah file"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_column="0"
                            android:layout_row="7"
                            tools:layout_editor_absoluteX="414dp"
                            tools:layout_editor_absoluteY="0dp" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tampil_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status : "
                            android:inputType="textPersonName"
                            android:textColor="@color/ireng"
                            android:textSize="19dp" />

                        <TextView
                            android:id="@+id/txt_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:ems="10"
                            android:text="belum diverivikasi"
                            android:inputType="textPersonName"
                            android:textSize="19dp"
                            android:textColor="@color/ireng"/>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_kirim"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/awal"
                        android:text="Kirim" />


                </GridLayout>
            </LinearLayout>

        </ScrollView>


    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>
